    }

    .footer-contact ul li span {
        margin-right: 0.5rem;
    }

    .footer-bottom {
        height: auto;
        text-align: center;
        margin-top: 2rem;
        font-size: 0.8rem;
        border-top: 1px solid #333;
        padding-top: 1rem;
    }
    .footer-bottom p {
        margin: 0;
    }

    .footer-links,
    .footer-logo,
