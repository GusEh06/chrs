---
const year = new Date().getFullYear();
---

<div class="footer">
    <div class="footer-container">
        <!-- Logo Section -->
        <div class="footer-logo">
            <img src="/images/image.jpg" alt="andresramos" />
            <p>
                Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut elit
                tellus, luctus nec ullamcorper mattis.
            </p>
        </div>

        <!-- Links Section -->
        <div class="footer-links">
            <h4>Navegar</h4>
            <ul>
                <li><a href="#">Inicio</a></li>
                <li><a href="#">Sobre mí</a></li>
                <li><a href="#">Proyecto</a></li>
                <li><a href="#">Contacto</a></li>
            </ul>
        </div>

        <!-- Contact Section -->
        <div class="footer-contact">
            <h4>Contáctame</h4>
            <ul>
                <li>Instagram</li>
                <li>WhatsApp</li>
                <li>Email</li>
                <li>Facebook</li>
            </ul>
        </div>
    </div>

    <div class="footer-bottom">
        <p>Copyright ©{year} | Powered by andresramos</p>
    </div>

    <style>
        /* Footer General */
        .footer {
            background-color: #1a1a1a;
            color: #fff;
            padding: 0;
            font-family: Arial, sans-serif;
        }

        .footer-container {
            height: 80%;
            display: flex;
            align-items: center;
            flex-wrap: wrap;
            padding: 1rem 0;
            justify-content: space-between;
            max-width: 1200px;
            margin: 0 auto;
        }

        .footer-logo,
        .footer-links,
        .footer-contact {
            flex: 1;
            min-width: 250px;
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
        }

        .footer-logo img {
            max-width: 100px;
            margin-bottom: 1rem;
        }

        .footer-logo p {
            font-size: 0.9rem;
            line-height: 1.5;
            margin-bottom: 1rem;
        }

        .footer-links h4,
        .footer-contact h4 {
            font-size: 1.2rem;
            margin-bottom: 1rem;
        }

        .footer-links ul,
        .footer-contact ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .footer-links ul li,
        .footer-contact ul li {
            margin-bottom: 0.5rem;
        }

        .footer-links ul li a {
            color: #fff;
            text-decoration: none;
            font-size: 0.9rem;
        }

        .footer-links ul li a:hover {
            text-decoration: underline;
        }

        .footer-bottom {
            height: auto;
            text-align: center;
            /* margin-top: 2rem; */
            font-size: 0.8rem;
            border-top: 1px solid #333;
            padding: 1rem 0;
        }

        .footer-bottom p {
            margin: 0;
        }

        /* Responsividad para Tablet */
        @media (max-width: 1024px) {
            .footer-container {
                display: flex;
                flex-direction: column;
                align-items: center;
                gap: 1.5rem;
            }

            .footer-links,
            .footer-contact {
                display: flex;
                justify-content: center;
                align-items: center;
                text-align: left;
                width: 100%;
            }
        }

        /* Responsividad para Celular */
        @media (max-width: 768px) {
            .footer-container {
                flex-direction: column;
                align-items: center;
                text-align: center;
            }

            .footer-links,
            .footer-contact {
                align-items: center;
                text-align: center;
                width: 100%;
            }
        }
    </style>
</div>
