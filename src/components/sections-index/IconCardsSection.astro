---
import IconCard from "../reusable/IconCard.astro";
---

<section class="icon-cards">
    <div class="icon-cards-text">
        <p class="icon-text">Texto de demostración</p>
        <p class="icon-text">Texto de demostración</p>
        <p class="icon-text">Texto de demostración</p>
    </div>
    <div class="icon-cards-container">
        <IconCard title="Prueba" icon="/images/image.jpg" />
        <IconCard title="Prueba" icon="/images/image.jpg" />
        <IconCard title="Prueba" icon="/images/image.jpg" />
        <IconCard title="Prueba" icon="/images/image.jpg" />
    </div>

    <style>
        /* Contenedor Principal */
        .icon-cards {
            display: flex;
            flex-direction: row;
            justify-content: center;
            align-items: center;
            gap: 17.5em;
            padding: 3rem 0;
            width: 100%;
        }

        /* Texto (Izquierda) */
        .icon-cards-text {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 1rem;
            margin-left: 2rem;
            max-width: 300px;
        }

        .icon-text {
            color: #fff;
            font-size: 1.2rem;
            text-align: center;
            margin: 0;
        }

        /* Contenedor de IconCards */
        .icon-cards-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 5.5rem;
            margin-right: 2rem;
            max-width: 800px;
        }

        /* Ajustes para Tablet */
        @media (max-width: 768px) {
            .icon-cards {
                flex-direction: column;
                align-items: center;
                gap: 3rem;
            }

            .icon-cards-text {
                margin-left: 0;
                max-width: 100%;
            }

            .icon-text {
                font-size: 1rem;
            }

            .icon-cards-container {
                gap: 2rem;
            }
        }

        /* Ajustes para Celular */
        @media (max-width: 480px) {
            .icon-cards-text {
                text-align: center;
            }

            .icon-text {
                font-size: 0.9rem;
            }

            .icon-cards-container {
                flex-direction: column;
                align-items: center;
                gap: 1.5rem;
                margin-right: 0;
            }
        }
    </style>
</section>
